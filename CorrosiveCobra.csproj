<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
	  <RootNamespace>Sorwest.CorrosiveCobra</RootNamespace>
	  <Version>1.0.3-1</Version>
	  <IncludedModProjectPaths>Sprites</IncludedModProjectPaths>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="References\Sprites\Artifacts\**" />
    <Compile Remove="References\Sprites\Parts\**" />
    <EmbeddedResource Remove="References\Sprites\Artifacts\**" />
    <EmbeddedResource Remove="References\Sprites\Parts\**" />
    <None Remove="References\Sprites\Artifacts\**" />
    <None Remove="References\Sprites\Parts\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging" Version="8.0.0" />
    <PackageReference Include="Shockah.CobaltCoreModBuildConfig" Version="2.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="CobaltCoreModding.Definitions">
      <HintPath>References\CobaltCoreModding.Definitions.dll</HintPath>
      <Private>False</Private>
    </Reference>
  </ItemGroup>

</Project>
